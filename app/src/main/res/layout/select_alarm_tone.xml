<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer">


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_radio_group"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="15dp">
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="art"
        android:id="@+id/select_1"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_2"
            android:text="beautiful"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_3"
            android:text="bells"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_4"
            android:text="bip bip bip"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_5"
            android:text="earth song"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_6"
            android:text="elegant"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:id="@+id/select_7"
            android:layout_height="wrap_content"
            android:text="go"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_8"
            android:text="hardwell"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_9"
            android:text="let her go"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_10"
            android:text="off art"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_11"
            android:text="off art 2"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_horizontal" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_alarm_phone"
            android:text="@string/select_from_phone"
            android:background="@color/drawer"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/select_save"
            android:background="@color/drawer"
            android:text="@string/save"/>

        </LinearLayout>
</LinearLayout>